
page {
    background: #f7f8fa;
    min-height: 100vh;
}

.container {
    position: relative;
    min-height: 100vh;
    overflow: hidden;
}


.bg-decoration {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
    overflow: hidden;
}

.circle {
    position: absolute;
    border-radius: 50%;
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
    filter: blur(40rpx);
}

.circle-1 {
    width: 400rpx;
    height: 400rpx;
    top: -200rpx;
    right: -100rpx;
    animation: float 15s infinite ease-in-out;
}

.circle-2 {
    width: 300rpx;
    height: 300rpx;
    bottom: 100rpx;
    left: -150rpx;
    animation: float 20s infinite ease-in-out reverse;
}

.circle-3 {
    width: 200rpx;
    height: 200rpx;
    top: 50%;
    right: 10%;
    animation: float 10s infinite ease-in-out;
}

@keyframes float {
    0%, 100% {
        transform: translate(0, 0) scale(1);
    }
    33% {
        transform: translate(30rpx, -30rpx) scale(1.1);
    }
    66% {
        transform: translate(-20rpx, 20rpx) scale(0.9);
    }
}

.header-section {
    padding: 20rpx 40rpx 40rpx;
    position: relative;
    z-index: 1;
    display: flex;
    align-items: center;
    justify-content: flex-start;
}

.avatar-wrapper {
    position: relative;
    display: inline-block;
    margin-right: 30rpx;
}

.avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    box-shadow: 0 20rpx 40rpx rgba(102, 126, 234, 0.3);
    border: 6rpx solid #fff;
}

@keyframes rotate {
    from {
        transform: rotate(0deg);
    }
    to {
        transform: rotate(360deg);
    }
}

.title-wrapper {
    text-align: left;
}

.main-title {
    display: block;
    font-size: 48rpx;
    font-weight: bold;
    color: #1a1a1a;
    text-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.cards-section {
    padding: 20rpx 30rpx 90rpx;
    position: relative;
    z-index: 2;
}

.function-card {
    background: #fff;
    border-radius: 24rpx;
    padding: 40rpx 36rpx;
    margin-bottom: 28rpx;
    display: flex;
    align-items: center;
    box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    min-height: 120rpx;
}

.function-card:active {
    transform: translateY(4rpx);
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.function-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, transparent, rgba(102, 126, 234, 0.05));
    opacity: 0;
    transition: opacity 0.3s;
}

.function-card:active::before {
    opacity: 1;
}

.card-icon-wrapper {
    margin-right: 60rpx;
}

.card-icon {
    width: 100rpx;
    height: 100rpx;
    border-radius: 24rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
}

.icon-text {
    font-size: 52rpx;
    filter: drop-shadow(2rpx 2rpx 4rpx rgba(0, 0, 0, 0.2));
}

.card-content {
    flex: 1;
}

.card-title {
    display: block;
    font-size: 34rpx;
    font-weight: 600;
    color: #1a1a1a;
    margin-bottom: 10rpx;
}

.card-desc {
    display: block;
    font-size: 28rpx;
    color: #8a8a8a;
}

.card-arrow {
    font-size: 40rpx;
    color: #c0c0c0;
    margin-left: 40rpx;
    font-weight: bold;
    transition: transform 0.3s;
}

.function-card:active .card-arrow {
    transform: translateX(8rpx);
}


.order-popup-tdesign,
.feedback-popup-tdesign {
    border-radius: 32rpx !important;
}


.modern-order-popup {
    background: #ffffff;
    border-radius: 32rpx;
    overflow: hidden;
    max-width: 750rpx;
    width: 94vw;
    max-height: 85vh;
    box-shadow: 0 24rpx 80rpx rgba(0, 0, 0, 0.15);
    animation: popupEnter 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.order-popup-header {
    padding: 40rpx 32rpx 32rpx;
    display: flex;
    align-items: center;
    position: relative;
}

.header-icon-area {
    width: 80rpx;
    height: 80rpx;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 24rpx;
}

.order-popup-title {
    flex: 1;
    font-size: 36rpx;
    font-weight: 700;
}

.order-close-btn {
    width: 56rpx;
    height: 56rpx;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
}

.order-close-btn:active {
    background: rgba(255, 255, 255, 0.3);
    transform: scale(0.9);
}

.order-popup-body {
    max-height: 60vh;
    padding: 32rpx;
    display: flex;
    flex-direction: column;
}


.order-list-scroll {
    flex: 1;
    height: 100%;
    max-height: calc(60vh - 64rpx);
}


.empty-state {
    text-align: center;
    padding: 80rpx 40rpx;
}

.empty-icon {
    margin-bottom: 32rpx;
}

.empty-title {
    display: block;
    font-size: 32rpx;
    color: #1f2329;
    font-weight: 600;
    margin-bottom: 12rpx;
}

.empty-desc {
    display: block;
    font-size: 28rpx;
    color: #878d9a;
}


.order-list-tdesign {
    display: flex;
    flex-direction: column;
    gap: 24rpx;
    padding: 0 0 24rpx 0;
    min-height: min-content;
}

.order-card {
    background: #fafbfc;
    border-radius: 20rpx;
    overflow: hidden;
    border: 2rpx solid #e7e7e7;
    transition: all 0.3s ease;
}

.order-card:active {
    transform: translateY(2rpx);
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.order-card-header {
    background: #ffffff;
    padding: 24rpx;
    border-bottom: 1rpx solid #e7e7e7;
}

.cdk-info {
    display: flex;
    flex-direction: column;
    gap: 16rpx;
}

.cdk-label-row {
    display: flex;
    align-items: center;
    gap: 8rpx;
}

.cdk-label {
    font-size: 28rpx;
    font-weight: 600;
    color: #1f2329;
}

.cdk-display-row {
    display: flex;
    align-items: center;
    gap: 16rpx;
    background: #f3f3f3;
    border-radius: 12rpx;
    padding: 20rpx;
}

.cdk-code {
    flex: 1;
    font-size: 28rpx;
    font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Roboto Mono', monospace;
    color: #0052d9;
    font-weight: 700;
    word-break: break-all;
    line-height: 1.4;
}

.copy-btn-tdesign {
    flex-shrink: 0;
    height: 56rpx !important;
    font-size: 24rpx !important;
}

.order-card-body {
    display: flex;
    justify-content: center;
}

.order-info-group {
    background: transparent !important;
    border: none !important;
}

.order-info-group .t-cell {
    background: transparent !important;
    padding: 20rpx 24rpx !important;
}

.order-info-group .t-cell:not(:last-child) {
    border-bottom: 1rpx solid #e7e7e7 !important;
}

.status-tag {
    font-size: 24rpx !important;
    padding: 6rpx 12rpx !important;
}


.modern-feedback-popup {
    background: #ffffff;
    border-radius: 32rpx;
    overflow: hidden;
    max-width: 650rpx;
    width: 92vw;
    box-shadow: 0 24rpx 80rpx rgba(0, 0, 0, 0.15);
    animation: popupEnter 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.feedback-popup-header {
    background: linear-gradient(135deg, #00a870 0%, #00d084 100%);
    padding: 40rpx 32rpx 32rpx;
    display: flex;
    align-items: center;
}

.feedback-icon-area {
    width: 80rpx;
    height: 80rpx;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 24rpx;
}

.feedback-popup-title {
    flex: 1;
    font-size: 36rpx;
    font-weight: 700;
    color: #ffffff;
}

.feedback-close-btn {
    width: 56rpx;
    height: 56rpx;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
}

.feedback-close-btn:active {
    background: rgba(255, 255, 255, 0.3);
    transform: scale(0.9);
}

.feedback-popup-body {
    padding: 40rpx 32rpx;
}


.feedback-intro {
    text-align: center;
    margin-bottom: 40rpx;
}

.intro-icon {
    margin-bottom: 24rpx;
}

.intro-title {
    display: block;
    font-size: 36rpx;
    font-weight: 700;
    color: #1f2329;
    margin-bottom: 12rpx;
}

.intro-desc {
    display: block;
    font-size: 28rpx;
    color: #878d9a;
}


.qq-info-card {
    background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
    border-radius: 20rpx;
    padding: 32rpx;
    margin-bottom: 32rpx;
    border: 2rpx solid #e2e8f0;
}

.qq-header {
    display: flex;
    align-items: center;
    gap: 12rpx;
    margin-bottom: 16rpx;
}

.qq-title {
    font-size: 30rpx;
    font-weight: 600;
    color: #1f2329;
}

.qq-content {
    margin-top: 24rpx;
    display: flex;
    flex-direction: column;
    gap: 24rpx;
    align-items: center;
}

.qq-number-display {
    background: #ffffff;
    border-radius: 16rpx;
    padding: 24rpx 32rpx;
    border: 2rpx solid #e2e8f0;
    width: 100%;
    text-align: center;
}

.qq-number-text {
    font-size: 40rpx;
    font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Roboto Mono', monospace;
    color: #0052d9;
    font-weight: 700;
    letter-spacing: 2rpx;
}

.copy-qq-btn {
    height: 80rpx !important;
    font-size: 30rpx !important;
    font-weight: 600 !important;
    min-width: 240rpx;
}


.feedback-tips {
    display: flex;
    flex-direction: column;
    gap: 20rpx;
}

.tip-item {
    display: flex;
    align-items: center;
    gap: 12rpx;
    padding: 16rpx 20rpx;
    background: rgba(0, 168, 112, 0.05);
    border-radius: 12rpx;
    border-left: 4rpx solid #00a870;
}

.tip-text {
    font-size: 26rpx;
    color: #1f2329;
    font-weight: 500;
}


@keyframes popupEnter {
    0% {
        opacity: 0;
        transform: scale(0.8) translateY(40rpx);
    }
    100% {
        opacity: 1;
        transform: scale(1) translateY(0);
    }
}


.feedback-popup-body .t-divider {
    margin: 0 !important;
}